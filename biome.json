{
    "$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 320
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "useKeyWithClickEvents": "off",
                "useMediaCaption": "off",
                "useValidAnchor": "off"
            },
            "style": {
                "noUselessElse": "off"
            },
            "performance": {
                "noDelete": "off"
            },
            "suspicious": {
                "noPrototypeBuiltins": "off"
            }
        }
    }
}
